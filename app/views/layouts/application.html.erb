<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <% if current_user %>
          <li class="userinfo">Signed in as <%= current_user.name %></li>
          <li class="userinfo"><%= link_to "Log out", session_destroy_path("current"), :method => :delete %></li>
          <% else %>
          <li><%= link_to "Log In", new_sessions_path %></li>
          <li><%= link_to 'Sign Up', new_users_path %></li>
          <% end %>
          
          <li><%= link_to("Products", root_path) %></li>
          <li><%= link_to('New Product', new_product_path) %></li>
        </ul>
      </nav>
    </header>

    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="altert"><%= flash[:alert] %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
