<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
            <% if current_user %>
              <li class="userinfo"><%= link_to "Log out", sessions_path("current"), :method => :delete %></li>
              <li class="userinfo">Signed in as <%= current_user.name %></li>
            <% else %>
            <li class="userinfo"><%= link_to "Log In", new_sessions_path %></li>
              <li class="userinfo"><%= link_to 'Sign Up', new_users_path %></li>
            <% end %>
            <li class="productlinks"><%= link_to("Products", root_path) %></li>
            <li class="productlinks"><%= link_to('New Product', new_product_path) %></li>
        </ul>
      </nav>
    </header>

    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="altert"><%= flash[:alert] %></p>
    <% end %>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
