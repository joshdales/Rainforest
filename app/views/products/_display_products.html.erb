<% if params[:action] != "show" %>
<h2 class="product_name"><%= product.name %></h2>
<% end %>
<p class="product_price"><%= product.price_in_dollars %></p>
<% if params[:action] == "show" %>
<p class="product_description"><%= product.description %></p>
<% end %>
<%= link_to image_tag(product.image_url, class: "poster"), product_path(product) %>
