<%= render 'display_products', product: @product %>
<%= link_to 'Back to Products', products_path %> <br />

<h3>Reviews</h3>
<% @reviews.each do |review| %>
<p><%= review.name %> at <%= review.created_at %>:</p>
<p><%= review.content %></p> <%= link_to('edit comment', edit_review_path(review)) %>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> | <%= link_to 'Delete', product_path(@product), method: :delete, data: {confirm: "Are you sure about this?"} %>
