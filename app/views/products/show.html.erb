<%= render 'display_products', product: @product %>
<%= link_to 'Back to Products', products_path %> <br />

<h3>Reviews</h3>

<%= render 'reviews/forms_reviews', review: @new_review, product_id: @product.id %>

<% @reviews.each do |review| %>
<p><%= review.name %> at <%= review.created_at %>:</p>
<p><%= review.content %></p>
<%= button_to('Edit', edit_review_path(review)) %>
<%= button_to 'Delete', review_path(review), method: :delete, data: {confirm: "Are you sure about this?"} %>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> | <%= link_to 'Delete', product_path(@product), method: :delete, data: {confirm: "Are you sure about this?"} %>
